<div style="margin-left: 6%">
  <%= form_with(model: professional) do |form| %>
    <% if professional.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% professional.errors.each do |error| %>
            <li><%= error.full_message %> !!</li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field column is-4">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "input" %>
    </div>

    <div class="field column is-4">
      <%= form.label :surname, class: "label" %>
      <%= form.text_field :surname, class: "input" %>
    </div>

    <div class="actions">
      <%= form.submit class: "button is-danger",style: "float: left; margin-left: 10px" %>
    </div>
  <% end %>
</div>