<p id="notice" style="margin-top: 5%; margin-left:5%;"><%= notice %></p>
<h1 style="margin-left:5%; font-size:24px">Professionals</h1>
<div style="margin-left: 6%">


  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @professionals.each do |professional| %>
        <tr>
          <td><%= professional.name %></td>
          <td><%= professional.surname %></td>
          <td><%= link_to 'Show', professional %></td>
          <% if loggedUserHasRole?("administracion") %>
            <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
            <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure you want to delete this professional?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div style="margin-left:5%">
  <% if loggedUserHasRole?("administracion") %>
    <%= link_to 'New Professional', new_professional_path, class: "button is-danger" ,style: "float: left; margin-top:30px"%>
  <% end %>
  <%= link_to 'Back to home', root_path, class: "button is-danger" ,style: "float: left; margin-left:10px; margin-top:30px"%>
</div>


