<p id="notice" style="margin-top: 5%; margin-left:5%;"><%= notice %></p>
<h1 style="margin-left:5%; font-size:24px">Users</h1>
<div style="margin-left: 6%">

  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New User', new_user_path, class: "button is-danger" ,style: "float: left; margin-left:5%; margin-top:30px" %>
<%= link_to 'Back to home', root_path, class: "button is-danger" ,style: "float: left; margin-left:10px; margin-top:30px"%>